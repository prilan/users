<h1>Listing Services</h1>
<%= link_to 'New service', new_service_path %>
<table>
  <tr>
    <th>Index</th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>

  <% @services.each do |service| %>
      <tr>
        <td><%= service.id %></td>
        <td><%= service.name %></td>
        <td><%= link_to 'Show', service_path(service) %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service_path(service),
                        method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>